<div class="container">
    {{#if error_data}}
    <div class="mt-4">
        Không tìm thấy sản phẩm !!!
    </div>
    <div>
        <h4 style="text-align: center; font-size: 20px; letter-spacing: 2px" class="mt-5">Các
            sản phẩm liên quan</h4>
        <hr>
    </div>
    <div class="row mt-5">
        {{#each data}}
        <div class="col-sm-6 col-lg-3">
            <div class="product-img">
                <img onclick="window.location.href = '/product/{{slug}}'" width="100" height="250" src="{{image}}"
                    alt="{{image}}">
            </div>
            <div class="product-info mb-4">
                <h6 class="product-title ml-2">[{{pid}}] {{pro_name}}</h6>
                <div class="mt-2 ml-2" style="text-decoration:line-through; color: grey">500.000đ</div>
                <div class="mt-2 ml-2">Giá: {{price}}</div>
                <button class="text-center submit-cart mt-3">
                    <a class="text-decoration-none" href="#">Mua Ngay <i class="fa fa-shopping-cart"></i></a>
                </button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}


    <div class="row mt-5">
        {{#each dataSearch}}
        <div class="col-sm-6 col-lg-3">
            <div class="product-img">
                <img onclick="window.location.href = '/product/{{slug}}'" width="100" height="250" src="{{image}}"
                    alt="{{image}}">
            </div>
            <div class="product-info mb-4">
                <h6 class="product-title ml-2">[{{pid}}] {{pro_name}}</h6>
                <div class="mt-2 ml-2" style="text-decoration:line-through; color: grey">500.000đ</div>
                <div class="mt-2 ml-2">Giá: {{price}}</div>
                <button class="text-center submit-cart mt-3">
                    <a class="text-decoration-none" href="#">Mua Ngay <i class="fa fa-shopping-cart"></i></a>
                </button>
            </div>
        </div>
        {{/each}}
    </div>

</div>



<div class="wrapper">
    <div class="loader">

    </div>

    <div class="logo">

    </div>


</div>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $('.wrapper').fadeOut();
        }, 500)
    })
</script>