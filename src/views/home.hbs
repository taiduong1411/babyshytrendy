<div id="banner" style="height: 555px" class="bg-secondary">
    <div id="mainBanner" class="carousel slide" data-ride="carousel" data-interval="3000">
        <ol class="carousel-indicators">
            <li data-target="#mainBanner" data-slide-to="0" class="active"></li>
            <li data-target="#mainBanner" data-slide-to="1"></li>
            <li data-target="#mainBanner" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://i.pinimg.com/originals/02/cf/cf/02cfcffac595c832c514d58704cd82ce.jpg" alt="image1">
            </div>
            <div class="carousel-item">
                <img src="https://previews.123rf.com/images/svetichch/svetichch1901/svetichch190100232/115725732-sale-banner-fashion-store-fashionable-womens-clothing-and-accessories-with-a-black-friday-banner-for.jpg?fj=1"
                    alt="image3">

            </div>
            <div class="carousel-item">
                <img src="/img/banner.png" alt="image2">

            </div>

        </div>
        <a class="carousel-control-prev" href="#mainBanner" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#mainBanner" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container">
        {{#if newCollection}}
        <div style="background-color: var(--color-main); border-radius: 10px;">
            <h1 style="text-align: center; font-family: Script; font-size: 60px; letter-spacing: 40px" class="mt-5"> NEW
                COLLECTION</h1>
        </div>
        {{/if}}
        <div class="row mt-5">
            {{#each data}}
            <div class="col-sm-6 col-lg-3">
                <div class="product-img">
                    <img onclick="window.location.href = '/product/{{slug}}'" width="100" height="250" src="{{image}}"
                        alt="{{image}}">
                </div>
                <div class="product-info mb-3">
                    <h6 class="product-title ml-2">[{{pid}}] {{pro_name}}</h6>
                    <div class="mt-2 ml-2" style="text-decoration:line-through; color: grey">500.000đ</div>
                    <div class="mt-2 ml-2">Giá: {{price}}</div>

                    <button class="text-center submit-cart mt-3">
                        <a class="text-decoration-none" href="/product/{{slug}}">Mua Ngay <i
                                class="fa fa-shopping-cart"></i></a>
                    </button>
                </div>
            </div>
            {{/each}}

        </div>


        <div class="row">
            <div class="col-md-12 d-flex justify-content-center mt-5">
                <ul class="pagination">
                    <li class="{{displayPrev}}"><a href="/home?page={{prev}}" class="prev">
                            <i class="fa fa-arrow-left"> </i></a>
                    </li>
                    {{{pages}}}
                    <li class="{{displayNext}}"><a href="/home?page={{next}}" class="next"><i
                                class="fa fa-arrow-right"></i></a></li>
                </ul>
            </div>
        </div>

    </div>

</div>


<div class="wrapper">
    <div class="loader">

    </div>

    <div class="logo">

    </div>


</div>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $('.wrapper').fadeOut();
        }, 500)
    })
</script>