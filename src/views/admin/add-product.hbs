<div class="s-layout">
    <!-- Sidebar -->
    <div class="s-layout__sidebar">
        <nav class="s-sidebar__nav">
            <ul>
                <li>
                    <a class="s-sidebar__nav-link" href="/home">
                        <i class="fa fa-home" aria-hidden="true"></i><em>Home</em>
                    </a>
                </li>
                <li>
                    <a class="s-sidebar__nav-link" href="/admin/dashboard">
                        <i class="fa fa-tachometer" aria-hidden="true"></i><em>Dashboard</em>
                    </a>
                </li>
                <li>
                    <a class="s-sidebar__nav-link" href="/admin/add-product">
                        <i class="fa fa-plus"></i><em>Thêm Sản Phẩm</em>
                    </a>
                </li>
                <li>
                    <a class="s-sidebar__nav-link" href="/admin/list-product">
                        <i class="fa fa-list"></i><em>Danh Sách Sản Phẩm</em>
                    </a>
                </li>
                <li>
                    <a class="s-sidebar__nav-link" href="/admin/list-users">
                        <i class="fa fa-list"></i><em>Danh Sách Nguoi Dung</em>
                    </a>
                </li>
                <li>
                    <a class="s-sidebar__nav-link" href="/admin/list-cart">
                        <i class="fa fa-plus"></i><em>Danh sách đơn hàng</em>
                    </a>
                </li>
                <li>
                    <a style="text-align: center;" class="s-sidebar__nav-link" href="/users/logout">
                        <em>Hi, {{username}}</em><i class="fa fa-sign-out" aria-hidden="true"></i>
                    </a>
                </li>

            </ul>
        </nav>
    </div>

    <!-- Content -->
    <div class="mainDiv">
        <div class="cardStyle">
            <div class="import-method" style="float: right; width: 200px;">
                <div style="height: 40px; width: 20px; display: inline;">
                    <input type="checkbox" id="check" name="check" style="vertical-align: middle;">
                    <span style="display: inline-block;">
                        Import from file Excel
                    </span>
                </div>
            </div>
            <br>
            <br>
            <form class="form_addProduct" style="position: relative;" action="/admin/add-product" method="post"
                enctype="multipart/form-data">
                {{!-- <img src="/img/logo.jpeg" id="signupLogo" /> --}}
                <h2 class="formTitle">
                    Nhập Sản Phẩm
                </h2>
                {{#if error}}
                <div id="error" style="width: 400px; margin:auto;" class="mt-5 alert alert-danger text-center">{{error}}
                </div>
                {{/if}}
                {{#if success}}
                <div id="success" style="width: 400px; margin:auto;" class="mt-5 alert alert-success text-center">
                    {{success}}</div>
                {{/if}}
                <div class="inputDiv">
                    <label class="inputLabel" for="type">Loại Sản Phẩm</label>
                    <select id="selector" name="gid" class="form-control">
                        <option selected>Select your option</option>
                        {{#each options}}
                        <option class="GID" value="{{gid}}">{{name}}</option>
                        {{/each}}
                        <option value="">Khác</option>
                    </select>
                </div>

                <div class="inputDiv" id="newGroup" style="display: none;">
                    <label class="inputLabel" for="newGroup">Loai San Pham Khac</label>
                    <input name="newGroup" type="text" id="newGroup" placeholder="Nhập Loại Sản Phẩm Khác">
                </div>

                <div class="inputDiv">
                    <label class="inputLabel" for="gid">ID San Pham</label>
                    <input type="text" id="pid" name="pid" placeholder="Nhập mã sản phẩm">
                </div>
                <div class="inputDiv">
                    <label class="inputLabel" for="pro_name">Tên Sản Phẩm</label>
                    <input type="text" id="pro_name" name="pro_name" placeholder="Nhập tên sản phẩm">
                </div>
                <div class="inputDiv">
                    <label class="inputLabel" for="description">Mô tả</label>
                    <textarea class="p-2" type="text" id="description" name="description"
                        placeholder="Nhập mô tả sản phẩm"></textarea>
                </div>
                <div class="inputDiv">
                    <label class="inputLabel" for="price">Giá sản phẩm</label>
                    <input type="text" id="price" name="price" placeholder="Nhập giá sản phẩm">
                </div>
                <div class="inputDiv">
                    <label class="inputLabel" for="price">Kho</label>
                    <input type="text" id="agency" name="agency" placeholder="Nhập kho sản phẩm">
                </div>
                <div class="inputDiv">
                    <label class="inputLabel" for="amount">Số lượng sản phẩm</label>
                    <input type="text" id="amount" name="amount" placeholder="Nhập số lượng sản phẩm">
                </div>
                <div class="inputDiv">
                    <label class="inputLabel" for="image">Hình ảnh sản phẩm</label>
                    <input style="height:50px; padding: 10px;" type="file" id="image" name="image"
                        placeholder="Nhập hình ảnh sản phẩm" multiple>
                </div>
                <button type="submit" class="submit">Hoàn Thành </button>
                <div style="position: absolute; width: 50px; height: 50px; border-width: 5px; right: 30%; bottom: 0"
                    class="loader"></div>
            </form>
            <form class="form_addProduct_byFile d-none" style="position: relative;" action="/admin/import-file"
                method="post" enctype="multipart/form-data">
                <h2 class="formTitle">
                    Nhập Sản Phẩm
                </h2>
                <div class="inputDiv">
                    <label class="inputLabel" for="file">Import file Excel</label>
                    <input style="height:50px; padding: 10px;" type="file" id="file" name="file">
                </div>
                <button type="submit" class="btn btn-success" style="float: right; margin: 30px 30px 30px 30px;">Hoàn
                    Thành</button>
            </form>
        </div>
    </div>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#selector').on('change', function () {
            if ($(this).val() === "") {
                $("#newGroup").show();
            }
            else {
                $("#newGroup").hide();
            }
        });
        $('select#selector').change(function () {
            let gid = $(this).children(':selected').val();

            $('#pid').val(gid)

        });
        $('.loader').hide();
        $('.submit').click(function (e) {
            $('.loader').show();
            setTimeout(function () {
                $('.loader').hide();
            }, 700)
        })
        $('#check').click(function () {
            if ($('#check').is(':checked')) {
                $('.form_addProduct').addClass('d-none')
                $('.form_addProduct_byFile').removeClass('d-none')
            } else {
                $('.form_addProduct').removeClass('d-none')
                $('.form_addProduct_byFile').addClass('d-none')
            }
        });
        setTimeout(function () {
            $('#error').fadeOut('slow')
            $('#success').fadeOut('slow')
        }, 2000)
    })
</script>