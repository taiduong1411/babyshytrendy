<div class="mainDiv">
    <div class="cardStyle">
        <form action="/users/change-information" method="post">

            <img src="/img/logo.jpeg" id="signupLogo" />

            <h2 class="formTitle">
                Đổi Thông Tin
            </h2>

            <div class="inputDiv">
                <label class="inputLabel" for="email">Email</label>
                <input type="email" id="email" name="email" value="{{data.email}}">
            </div>

            <div class="inputDiv">
                <label class="inputLabel" for="phone">Số Điện Thoại</label>
                <input type="text" id="phone" name="phone" value="{{data.phone}}">
            </div>
            <div class="inputDiv">
                <label class="inputLabel" for="address">Địa Chỉ</label>
                <input type="text" id="address" name="address" value="{{data.address}}">
            </div>
            <button type="submit" class="submit">Hoàn Thành</button>

        </form>
    </div>
</div>